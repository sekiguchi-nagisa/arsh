#!/usr/bin/env arsh

var bin = $@.shift()

let default = ("$(nproc)".toInt() ?? 4) / 2

import-env FUZZ_JOBS : "$default"

var N = $FUZZ_JOBS.toInt() ?? 4

# ARSH_FUZZ_POLICY  comp: do-completion (default), eval: compile-only

ARSH_SUPPRESS_COMPILE_ERROR=on exec $bin -jobs=$N -workers=$N -rss_limit_mb=81920 $@
