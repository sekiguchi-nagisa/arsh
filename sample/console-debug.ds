#!/usr/bin/env arsh

if $# < 2 {
    echo usage: $0 [BIN_NAME] [file] [ARGS...]
    exit 1
}

let BIN = $@.shift()
let FILE = $@.shift()

test -x $BIN || {
    echo $BIN must be executable file
    exit 1
}

if !(call $BIN --feature | grep USE_LOGGING) {
    echo $BIN needs USE_LOGGING feature
    exit 1
}

YDSH_APPENDER=$FILE YDSH_DUMP_CONSOLE=on exec -a "$(basename $0)" $BIN $@
