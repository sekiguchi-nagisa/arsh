# int value
var a = 4
var b = 2

assert(-$a == -4)
assert($a + $b == 6)
assert($a - $b == 2)
assert($a * $b == 8)
assert($a / $b == 2)
assert($a % $b == 0)

# float value
var a2 = 4.2
var b2 = 2.2

assert(-$a2 == -4.2)
assert($a2 + $b2 == 6.4)
assert($a2 - $b2 == 2)
assert($a2 * $b2 == 9.240000000000002)
assert($a2 / $b2 == 1.909090909090909)
assert($a2 % $b2 == 2.0)

# int and float
var a3 = 4.2
var b3 = 2

assert($a3 + $b3 == 6.2)
assert($b3 + $a3 == 6.2)
assert($a3 - $b3 == 2.2)
assert($b3 - $a3 == -2.2)
assert($a3 * $b3 == 8.4)
assert($b3 * $a3 == 8.4)
assert($a3 / $b3 == 2.1)
