
# for temp file creation

source ../../../share/ydsh/modules/atexit

let _TEMPS = new [String]()

$atexit(function(s, e) => {
    for $e in $_TEMPS {
        rm -rf $e
    }
    $_TEMPS.clear()
})

function file() : String {
    let tmpfile = "$(mktemp 2> /dev/null || mktemp -t $RANDOM)"
    assert !$tmpfile.empty()
    $_TEMPS.add($tmpfile)
    return $tmpfile
}
