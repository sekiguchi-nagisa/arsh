# tilde expansion

## expand to HOME
import-env HOME
assert($HOME == "$(echo ~)")
assert($HOME + "/" == "$(echo ~/)")
assert($HOME + "/hoge" == "$(echo ~/hoge)")
assert("~g" == "$(echo ~'g')")
assert($HOME + "/h" == "$(echo ~/'h')")
var home = $HOME
$HOME = "hellohome!@!"
var homev = "$(echo ~)"
assert($HOME == $homev)
assert "hellohome!@!" == $homev
unsetenv HOME
assert $home == "$(echo ~)"
$HOME = $home

## expand to PWD
import-env PWD : "$(pwd)"
assert($PWD == "$(echo ~+)") : "$PWD, $(pwd), $(echo ~+)"
assert($PWD + "/" == "$(echo ~'+/')")
assert($PWD + "/huge" == "$(echo ~+/huge)")
assert($PWD + "/huge" == "$(echo ~+/"huge")")
assert("~+e" == "$(echo ~+e)")
assert("~+e" == "$(echo ~+'e')")

let pwd = $PWD
$PWD='.'
assert $pwd == "$(echo ~+)"

$PWD='frieja'
assert $pwd == "$(echo ~+)"

$PWD='/'
assert $pwd == "$(echo ~+)"

unsetenv PWD
assert $pwd == "$(echo ~+)"
$PWD = $pwd

## expand to OLDPWD
import-env OLDPWD : "$(pwd)"
assert($OLDPWD == "$(echo ~-)")
assert($OLDPWD + "/" == "$(echo ~-/)")
assert($OLDPWD + "/we" == "$(echo ~-/we)")
assert($OLDPWD + "/false" == "$(echo ~-/$false)")
assert("~-yfr" == "$(echo ~-yfr)")
assert("~-true" == "$(echo ~-$true)")

let oldpwd = $OLDPWD
$OLDPWD = 'hgiraheo'
assert "~-" == "$(echo ~-)"

$OLDPWD = '.'
assert "~-" == "$(echo ~-)"

unsetenv OLDPWD
assert "~-" == "$(echo ~-)"
$OLDPWD = $oldpwd

## expand to PWD in removed cwd
let tmp_dir = "$(mktemp -d 2> /dev/null || mktemp -d -t lfreop)"
assert !$tmp_dir.empty()
cd $tmp_dir
assert $tmp_dir == "$(echo ~+)"
rm -rf $tmp_dir
assert '~+' == "$(echo ~+)"

cd $pwd

## expand to user home
if ! $OSTYPE.startsWith("CYGWIN") {
    assert("$(cat /etc/passwd | grep ^root | cut -d : -f 6)" == "$(echo ~root)")
}

## no expand
assert "$(echo :~)" == ':~'
assert "$(echo \\:~)" == '\:~'