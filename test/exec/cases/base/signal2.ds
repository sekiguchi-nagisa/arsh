var raised = 0

function f($s : Signal) {
    false;
    $raised++
}

function raise($s : String) {
    $SIG.get($s)!.kill($PID)
}

assert $SIG_NUL is typeof($f)!

$SIGHUP.trap($f)
$SIGTERM.trap($f)

true
$raise('hup')
assert $? == 0  # restore old exit status
assert $raised == 1


$raise("sigterm")
assert $raised == 2