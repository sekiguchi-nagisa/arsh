
#$test($out = $'receive: 1: 0\n')

function f($s : Int, $a : Any) {
    echo receive: $s: "$a"
}

$TERM_HOOK = $f

assert "$(echo hello)" == "hello"   # reset termination hook in child

# hook in child
function g($s : Int, $a : Any) {
    echo recv$s
}

assert "$({
    $TERM_HOOK = $g; 34 / 0;
})" == "recv2"

assert "$({
    $TERM_HOOK = $g; assert false;
})" == "recv4"

assert "$({
    $TERM_HOOK = $g; true;
})" == "recv1"