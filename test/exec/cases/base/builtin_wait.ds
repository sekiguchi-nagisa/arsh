
var j1 = { sleep 2; exit 12; } &
var j2 = { sleep 2; exit 34; } &
var j3 = { sleep 2; exit 56; } &

wait $j1 $j2 ${$j3.pid(0)!}
assert $? == 56 : "$?"

# error
$j1 = { sleep 3; exit 12; } &
wait %100 $j1
assert $? == 127

wait
assert $? == 0

var ppid = $PPID
wait $ppid 423
assert $? == 127
assert "$(wait $ppid 423 2>&1)" == "ydsh: wait: $ppid: not a child of this shell"

true
