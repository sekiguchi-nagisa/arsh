assert $(echo ./*).sort().join(" ") == $(sh -c 'echo ./*').sort().join(" ")
assert $(echo ./././*).sort().join(" ") == $(sh -c 'echo ./././*').sort().join(" ")
assert $(echo /us*/).sort().join(" ") == $(sh -c 'echo /us*/').sort().join(" ")
assert "$(echo ///us*///)" == "$(echo /us*/)"
assert "$(echo ///us*///././)" == "$(echo /us*/././)"
assert "$(echo ~/*)" == "$(echo ~"/"*)"
assert "$(echo ~/*)" == "$(echo ~'/'*)"
assert "$(echo ~/*)" == "$(echo ~/""*)"
assert "$(echo ~/*)" == "$(echo ~/*"")"
assert "$(echo *)" == "$(echo ""*)"
assert "$(echo [)" == '['
assert "$(echo ${34}['')" == '['
assert "$(echo ])" == ']'
assert "$(echo ]2345)" == ']2345'
assert "$(echo [ ])" == '[ ]'
assert "$(echo [${""}""$34)" == '['
