# globstar
{
    shctl set globstar
    var a = @($SCRIPT_DIR/../**)
    shctl unset globstar
    var b = @($SCRIPT_DIR/../**)
    assert $a.size() != $b.size()
}

# null glob
shctl set nullglob
$ex = 2
try { echo "~/"*; } catch $e { $ex = $e; }
assert $ex is Int   # no error
assert $(echo "~/"*).empty()

# dot glob
shctl unset nullglob
var a = $(echo ~/.* ~/*).sort().join(" ")
assert $(echo ~/*).sort().join(" ") != $a
shctl set dotglob
assert $(echo ~/*).sort().join(" ") == $a

# fast glob
var aa = @(../*/../*)
shctl set fastglob
var bb = @(../*/../*)
assert $aa.size() > $bb.size()

# fail glob
shctl unset fastglob nullglob dotglob failglob
$aa = @(\**"\\2")
assert $aa.size() == 1
assert $aa[0] == '**\2'

$aa = @(*\*\??)
assert $aa.size() == 1
assert $aa[0] == '**??'

$aa = @(~[a-z]*)
assert $aa.size() == 1
assert $aa[0] == '~[a-z]*'

var meta = "[a-zA-Z]"
$aa = @(/$meta*)
