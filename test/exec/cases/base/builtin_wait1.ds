
var j1 = { sleep 1; exit 12; } &
var j2 = { sleep 1; exit 34; } &
var j3 = { sleep 1; exit 56; } &

wait $j1 $j2 ${$j3.pid(0)!}
assert $? == 56 : "$?"

# error
$j1 = { sleep 1; exit 78; } &
wait %100 $j1
assert $? == 127

wait
assert $? == 78 : "$?"

var ppid = $PPID
wait $ppid 423
assert $? == 127
assert "$(wait $ppid 423 2>&1)" == "ydsh: wait: $ppid: not a child of this shell"

## wait disowned
$j1 = { sleep 1; exit 33; } &!
wait $j1
assert $? == 127
assert $j1.wait() == 33

## wait in child
$j1 = { sleep 2; exit 66; } &
$j2 = {
    assert $j1 as String == '%1'
    var s = try { wait $j1; $?; } 
            catch $e { assert $e is SystemError; 100; }
    exit $s
} &

wait

assert $j1.wait() == 66
assert $j2.wait() == 255  # wait for no-child is not throw (return 255)

true
