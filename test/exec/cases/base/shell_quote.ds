
function evalArg(arg : String) : String {
    var func = $MODULE._func("[ @($arg).join(' ') ]")
    var ret = $func()! as [String]
    return $ret[0]
}

function assertQuote(arg : String, quoted : String) {
    var q = $arg.quote()
    assert $q == $quoted : $q
    var r = $evalArg($q)
    assert $r == $arg : $r
}

$assertQuote("hello world ", 'hello\ world\ ')
$assertQuote("あいう", 'あいう')
$assertQuote("~", '\~')
$assertQuote("PATH=~/", 'PATH=\~/')
$assertQuote("/*", '/\*')
$assertQuote("/?", '/\?')
$assertQuote($'# they are pen & apple | \n\t"$(echo hello {1..2})" ;', 
    '\#\ they\ are\ pen\ \&\ apple\ \|\ ' + "\$'\x0a'" + "\$'\x09'" + '\"\$\(echo\ hello\ \{1..2\}\)\"\ \;')
$assertQuote("<?>'3'\\", '\<\?\>' + "\'3\'" + '\\')
$assertQuote($'\xFE', "$'\\xfe'")
$assertQuote('`echo hello`', '\`echo\ hello\`')
$assertQuote('echo &!', 'echo\ \&\!')
$assertQuote('[,]', '\[,\]')

# for dequote
assert "".dequote() == ""
assert " ".dequote() == " "
assert $'\0'.dequote() == $'\0'
assert 'あ'.dequote() == 'あ'
assert $'\xFF\xFF'.dequote() == $'\xFF\xFF'
assert '\'.dequote() == ''
assert $'\\\n'.dequote() == ''
assert '\1'.dequote() == '1'
assert '\ '.dequote() == ' '
assert '\\'.dequote() == '\'
assert '\"'.dequote() == '"'
assert $'h\$ello\\\nworld'.dequote() == 'h$elloworld'
assert $'hello\\\tworld'.dequote() == $'hello\tworld'
assert $'hello\\\n\nworld'.dequote() == $'hello\nworld'