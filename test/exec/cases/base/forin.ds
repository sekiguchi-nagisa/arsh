var rr : [String]
var invalid = $'\xC2\x24\xE0\xA4\xC2\xE0\xB8\xB3'
var expects = $invalid.chars()
for a in $invalid {
    $rr.add($a)
}
assert $rr.size() == 6  # split into original bytes even if invalid utf8 bytes
assert $rr[0] == $'\xC2'
assert $rr[0] == $expects[0]
assert !$rr[0].validate()
assert $rr[1] == "$"
assert $rr[1] == $expects[1]
assert $rr[1].validate()
assert $rr[2] == $'\xE0'
assert $rr[2] == $expects[2]
assert !$rr[2].validate()
assert $rr[3] == $'\xA4'
assert $rr[3] == $expects[3]
assert !$rr[3].validate()
assert $rr[4] == $'\xC2'
assert $rr[4] == $expects[4]
assert !$rr[4].validate()
assert $rr[5] == $'\u0E33'
assert $rr[5] == $expects[5]
assert $rr[5].validate()

## for-in optional (check unwrap)
$rr.clear()
for e in $none as String? { $rr.add($e); }
assert $rr.empty()

for e in "123" as String? { $rr.add($e); }
assert $rr.size() == 3
assert $rr[0] == '1'
assert $rr[1] == '2'
assert $rr[2] == '3'