#!/usr/bin/env ydsh

# load default prompt setting
source $SCRIPT_DIR/edit_impl/prompt inlined

# load default history setting
source $SCRIPT_DIR/edit_impl/history inlined

$LINE_EDIT.setCompletion(function(m, s) => {
    complete -m $m -q -s -- $s
    $COMPREPLY
})

if(command -v dscolorize &> /dev/null) {
    $LINE_EDIT.setColor("$(dscolorize --dump)")
}
