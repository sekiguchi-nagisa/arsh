
let _TERM_HOOKS : [typeof($TERM_HOOK!)]

function _defaultHook() {
    for hook in $_TERM_HOOKS {
        try {
            $hook()
        } catch e {
            $e.show()
        }
    }
}

function atexit(h : typeof($TERM_HOOK!)) {
    if !$TERM_HOOK || $TERM_HOOK! != $_defaultHook {
        $_TERM_HOOKS.clear()
    }
    $TERM_HOOK = $_defaultHook
    $h == $_defaultHook && return
    $_TERM_HOOKS.add($h)
}
