
let _TERM_HOOKS : [typeof($TERM_HOOK!)]

function _defaultHook() {
    for hook in $_TERM_HOOKS {
        try {
            $hook()
        } catch e {
            $e.show()
        }
    }
}

function atexit(h : typeof($TERM_HOOK!)) {
    $_TERM_HOOKS.add($h)
    $TERM_HOOK = function() => {
        for hook in $_TERM_HOOKS.reverse() {
            try {
                $hook()
            } catch e {
                $e.show()
            }
        }
        $_TERM_HOOKS.clear()
    }
}
